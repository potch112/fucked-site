---
layout: layouts/base.njk
title: Archive
pagination:
  data: collections.posts
  size: 20
permalink: "/archive/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}"
---

<h1>Archive</h1>
<ul>
{% for post in pagination.items %}
  <li>
    <a href="{{ post.url }}">{{ post.data.title }}</a>
    <span class="muted">• {{ post.data.date | date("yyyy-LL-dd") }}</span>
  </li>
{% endfor %}
</ul>

<nav>
  {% if pagination.href.previous %}<a href="{{ pagination.href.previous }}">← Newer</a>{% endif %}
  {% if pagination.href.next %}<a style="float:right" href="{{ pagination.href.next }}">Older →</a>{% endif %}
</nav>
